<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- 配置日志管理 -->
	<settings>
		<setting name="logImpl" value="LOG4J"/>
	</settings>
	<!-- 配置数据源 -->
	<environments default="mysql">
		<environment id="mysql">
			<!-- 指定事务的类型，简单实用JDBC的提交和回滚设置 -->
			<transactionManager type="JDBC"></transactionManager>
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver"/>
				<property name="url" value="jdbc:mysql://localhost:3306/study_r?useUnicode=true&amp;characterEncoding=utf8"/>
				<property name="username" value="root"/>
				<property name="password" value="Jane1002."/>
			</dataSource>
		</environment>
	</environments>
	
	<!-- 注册mapper文件 -->
	<mappers>
		<!-- 如果用接口去映射话，那么你的xml文件，就必须和接口保持一致 -->
		<mapper class="com.syf.study.mapper.UserMapper"/>
		<!-- 用resource也行，可以直接点 -->
		<mapper resource="com/syf/study/mapper/TestUserMapper.xml"/>
	</mappers>

</configuration>


